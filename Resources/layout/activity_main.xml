<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/salaryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/salary_label"
            android:textSize="16sp"
            android:layout_marginBottom="0dp" />

        <EditText
            android:id="@+id/editTextSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/enter_salary"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/salary_frequency_hint"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerFrequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/hoursWorkedPerWeekTextViewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hours_worked_per_week_label"
            android:textSize="16sp"
            android:layout_marginBottom="0dp" />

        <EditText
            android:id="@+id/editTextHoursWorkedPerWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/hours_worked_per_week_hint"
            android:layout_marginBottom="16dp" />

        <CheckBox
            android:id="@+id/checkBoxStudentLoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/student_loan"
            android:layout_marginBottom="16dp" />

        <CheckBox
            android:id="@+id/checkBoxKiwiSaver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kiwisaver"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/kiwiSaverRateTextViewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kiwisaver_rate_hint"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerKiwiSaver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <CheckBox
            android:id="@+id/checkboxCalculateIncomeRelatedRent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calculate_income_related_rent"
            android:layout_marginBottom="16dp" />

        <CheckBox
            android:id="@+id/checkBoxMarketRent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/market_rent"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/weeklyRentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weekly_rent_label"
            android:textSize="16sp"
            android:layout_marginBottom="0dp" />

        <EditText
            android:id="@+id/editTextWeeklyRent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/enter_weekly_rent"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/living_situation_hint"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerLivingSituation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/output_frequency_hint"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerOutputFrequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/buttonCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/primaryColor"
            android:text="@string/calculate"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonClearResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primaryColor"
            android:text="@string/clear_results"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewResultsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/results"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="0.0dp"
            android:layout_marginRight="0.0dp" />
        	
		<LinearLayout
			android:id="@+id/linearLayoutResults"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" />
        
        <LinearLayout
            android:id="@+id/linearLayoutError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>